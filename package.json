{
  "name": "@zweer/manga-scraper",
  "version": "1.5.0",
  "description": "A collection of scrapers for manga websites",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "commonjs",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/manga-scraper.git"
  },
  "author": "Niccol√≤ Olivieri Achille <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lint:lockfile": "lockfile-lint",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "check": "npm run lint && npm run format",
    "test": "jest",
    "test:debug": "jest --runInBand",
    "clean": "rimraf --glob ./{lib,tests}/**/*.{d.ts,js}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "release": "semantic-release"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "engines": {
    "node": ">= 18.17"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@shopify/eslint-plugin": "^46.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "lockfile-lint": "^4.14.0",
    "ls-engines": "^0.9.3",
    "prettier": "^3.4.2",
    "publint": "^0.3.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
